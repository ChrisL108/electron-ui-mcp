{
  "name": "electron-ui-mcp",
  "version": "0.1.0",
  "description": "Electron UI automation MCP server with Playwright-style primitives",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "electron-ui-mcp": "./dist/cli.js"
  },
  "license": "MIT",
  "keywords": [
    "mcp",
    "electron",
    "playwright",
    "automation",
    "testing",
    "model-context-protocol"
  ],
  "author": "ChrisL108",
  "repository": {
    "type": "git",
    "url": "https://github.com/ChrisL108/electron-ui-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/ChrisL108/electron-ui-mcp/issues"
  },
  "homepage": "https://github.com/ChrisL108/electron-ui-mcp#readme",
